<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemGare"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:elevation="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layout_gare_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/gare_container"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_directions_subway_24"
                app:tint="@color/black" />

            <LinearLayout
                android:id="@+id/gare_detail_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/libelle"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/location"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/map_button_container"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_assistant_navigation_24"
                app:tint="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afficher"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>